{
	"manifest_version": 2
	,"name": "SP REST JSON"
	,"version": "0.1.1"
	,"author": "Daniel Desch"
	,"icons": {
		"48": "icons/48/sp_logo_active.png"
		,"96": "icons/96/sp_logo_active.png"
	}
	,"browser_action": {
		"default_icon": "icons/32/sp_logo_active.png"
		,"default_popup": "popup/options.html"
		,"browser_style": true
		
	}
	,"description": "Modifies request header for SharePoint REST API calls to get JSON instead of XML. For best results you'll need a JSON viewer Add-on."
	,"background": {
			"scripts": ["SPRESTJSON.js"]
	}
	,"permissions": [
		"<all_urls>"
		,"tabs"
		,"webRequest"
		,"webRequestBlocking"
	]
}